<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <android.support.v4.view.ViewPager 
    android:id="@+id/viewPager"    
    android:layout_width="fill_parent"
    android:layout_height="180dp"/>
    <HorizontalScrollView
       
        android:id="@+id/hscroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <RadioGroup
            android:id="@+id/bar_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/bar_rd1"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:checked="true"
                android:paddingBottom="3dp"
                android:text="@string/text_tj" />

            <RadioButton
                android:id="@+id/bar_rd2"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                 android:layout_marginLeft="2dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="@string/tv_text_cy" />

            <RadioButton
                android:id="@+id/bar_rd3"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                 android:layout_marginLeft="2dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="@string/tv_text_hj" />

            <RadioButton
                android:id="@+id/bar_rd4"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                 android:layout_marginLeft="2dp"
                android:text="@string/tv_text_zr" />

            <RadioButton
                android:id="@+id/bar_rd5"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                 android:layout_marginLeft="2dp"
                android:text="@string/tv_text_zx" />

            <RadioButton
                android:id="@+id/bar_rd6"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                 android:layout_marginLeft="2dp"
                android:text="@string/tv_text_dl" />

            <RadioButton
                android:id="@+id/bar_rd7"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/sc_bar_selector"
                android:gravity="center"
                android:paddingBottom="3dp"
                 android:layout_marginLeft="2dp"
                android:text="@string/tv_text_mj" />

            <RadioButton
                android:id="@+id/bar_rd8"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                 android:layout_marginLeft="2dp"
                android:text="@string/tv_text_gj" />

            <RadioButton
                android:id="@+id/bar_rd9"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                 android:layout_marginLeft="2dp"
                android:text="@string/tv_text_rj" />

            <RadioButton
                android:id="@+id/bar_rd10"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                 android:layout_marginLeft="2dp"
                android:text="@string/tv_text_yj" />

            <RadioButton
                android:id="@+id/bar_rd11"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                 android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="@string/tv_text_hp" />

            <RadioButton
                android:id="@+id/bar_rd12"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                 android:layout_marginLeft="2dp"
                android:text="@string/tv_text_tj" />
            
            <RadioButton
                android:id="@+id/bar_rd13"
                style="@style/main_radio_botton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                 android:layout_marginLeft="2dp"
                android:text="@string/tv_text_taij" />
            
        </RadioGroup>
    </HorizontalScrollView>
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/gradient_gap"
        />
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
 <include layout="@layout/listview_item"/>
<include layout="@layout/progress_bar" android:id="@+id/pb"/>
</RelativeLayout>
</LinearLayout>